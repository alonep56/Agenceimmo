<div class="card mb-4">
    {% if property.picture %}
      <img src="{{ vich_uploader_asset(property.picture, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top">
      {% else %}
      <img src="{{ '/images/principal.png' | imagine_filter('thumb') }}" alt="card-img-top">
    {% endif %}
  <div class="card-body">

    <h5 class="card-title">
      <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
        {{ property.title }}
      </a>
    </h5>
    <p class="card-text">{{ property.surface }} m&sup2 -
      ({{ property.postalCode }})</p>
    <div class="text-primary" style="font-size:2rem; font-weight: bold;">
      {{ property.formattedPrice }}
      â‚¬

    </div>

  </div>

</div>
